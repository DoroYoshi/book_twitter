<% @books.each do |book| %>
  <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
    <div class="mx-auto"><%= link_to show_book_image(book), book_path(book) %></div>
    <h4 class="mt-2"><%= link_to book.title, book_path(book) %></h4>
  </div>
<% end %>

<div class="col-12">
  <%= paginate @books %>
</div>